@model FitnessTracker.Models.Workout

@{
    ViewData["Title"] = "Workout";
}

<h1>Workout</h1>

<h4>Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Workout">
